<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1ede8"
    tools:context="crd.lk.ecms.RegisterActivity">

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextMobileNo"
        android:layout_alignStart="@+id/editTextMobileNo"
        android:layout_alignEnd="@+id/editTextMobileNo"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="3dp"
        android:background="#d5a2f2"
        android:text="REGISTER" />

    <EditText
        android:id="@+id/editTextMobileNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:hint="Add Your Mobile Number"
        android:inputType="textPersonName"
        android:paddingLeft="10dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/complain" />
</RelativeLayout>
